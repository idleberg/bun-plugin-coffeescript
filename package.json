{
	"name": "bun-plugin-coffeescript",
	"version": "0.1.0",
	"description": "Use CoffeeScript with Bun, old meets new",
	"license": "MIT",
	"author": "Jan T. Sott",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/bun-plugin-coffeescript.git"
	},
	"keywords": [
		"bun",
		"bun-plugin",
		"coffeescript",
		"coffee-script"
	],
	"type": "module",
	"exports": {
		".": {
			"bun": "./src/index.ts",
			"types": "./src/module.d.ts",
			"import": "./src/index.ts"
		}
	},
	"engines": {
		"bun": ">=1.0.0",
		"node": ">=20"
	},
	"files": [
		"src/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"lint": "concurrently --prefix-colors blue,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepack": "npm run lint",
		"prepare": "lefthook install",
		"publish:jsr": "deno publish",
		"publish:npm": "np --any-branch",
		"test": "bun test"
	},
	"dependencies": {
		"coffeescript": "^2.7.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@e18e/cli": "^0.3.1",
		"@idleberg/configs": "^0.3.3",
		"@types/coffeescript": "^2.5.7",
		"bun-types": "^1.3.2",
		"concurrently": "^9.2.1",
		"np": "^10.2.0"
	}
}
